<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextAlignment?>
<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="grocerystore.Cart" stylesheets="@styles.css">
    
    <!-- Header Section -->
    <top>
        <VBox styleClass="header" spacing="0">
            <Label text="ðŸ›’ Grocery Cart Application" styleClass="header-title" textAlignment="CENTER">
                <font>
                    <Font name="Segoe UI Bold" size="28"/>
                </font>
            </Label>
            <Label text="Shop smart, shop easy" styleClass="header-subtitle" textAlignment="CENTER">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Item Selection Card -->
            <VBox styleClass="card" spacing="15">
                <Label text="ðŸ“¦ Select Items" styleClass="section-title"/>
                
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        <ColumnConstraints minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        <ColumnConstraints minWidth="80" prefWidth="100"/>
                    </columnConstraints>
                    
                    <Label text="Item:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="CENTER"/>
                    <ComboBox fx:id="itemsComboBox" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>
                    
                    <Label text="Quantity:" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.valignment="CENTER"/>
                    <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
                        <Slider fx:id="quantitySlider" min="1" max="20" value="1" prefWidth="200" showTickLabels="true" showTickMarks="true" majorTickUnit="5" minorTickCount="1"/>
                        <Label fx:id="purchaseUnitsLabel" styleClass="value-label" minWidth="50" textAlignment="CENTER"/>
                    </HBox>
                </GridPane>
                
                <!-- Item Details Panel -->
                <VBox styleClass="info-panel" spacing="8">
                    <GridPane hgap="15" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="150"/>
                            <ColumnConstraints minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="150"/>
                        </columnConstraints>
                        
                        <Label text="Selected Item:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="unitValueLabel" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="0" text="None"/>
                        
                        <Label text="Unit Price:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <Label fx:id="unitPriceValueLabel" styleClass="price-label" GridPane.columnIndex="3" GridPane.rowIndex="0" text="$$0.00"/>
                    </GridPane>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox spacing="12" alignment="CENTER">
                    <Button fx:id="addButton" text="âž• Add to Cart" styleClass="button button-success" prefWidth="150"/>
                    <Button fx:id="removeButton" text="âž– Remove" styleClass="button button-danger" prefWidth="150"/>
                    <Button fx:id="saveCartButton" text="ðŸ’¾ Save Cart" styleClass="button button-info" prefWidth="150"/>
                    <Button fx:id="loadCartButton" text="ðŸ“‚ Load Cart" styleClass="button button-info" prefWidth="150"/>
                    <Button fx:id="checkOutButton" text="âœ… Checkout" styleClass="button button-warning" prefWidth="150"/>
                </HBox>
            </VBox>
            
            <!-- Tables Section -->
            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <!-- Available Items Table -->
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“‹ Available Items" styleClass="section-title"/>
                    <TableView fx:id="itemsTableView" prefHeight="200" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="itemNameColumn" text="Item Name" prefWidth="200"/>
                            <TableColumn fx:id="unitPriceColumn" text="Price ($)" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
                
                <!-- Shopping Cart Table -->
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ›’ Your Shopping Cart" styleClass="section-title"/>
                    <TableView fx:id="cartTableView" prefHeight="200" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="cartItemNameColumn" text="Item" prefWidth="180"/>
                            <TableColumn fx:id="cartUnitPriceColumn" text="Unit Price ($)" prefWidth="110"/>
                            <TableColumn fx:id="cartQuantityColumn" text="Qty" prefWidth="80"/>
                            <TableColumn fx:id="cartTotalPriceColumn" text="Total ($)" prefWidth="110"/>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <!-- Footer with Total -->
    <bottom>
        <VBox styleClass="card" spacing="10" style="-fx-padding: 20; -fx-alignment: center;">
            <HBox spacing="20" alignment="CENTER">
                <Label text="Total Amount:" styleClass="section-title"/>
                <Label fx:id="totalValueLabel" styleClass="total-label" text="$$0.00" minWidth="150" textAlignment="CENTER"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
